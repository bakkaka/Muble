{% extends 'base.html.twig' %}

{% block title %}Discussion{% endblock %}

{% block body %}
    <h1>Discussion</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ discussion.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ discussion.title }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ discussion.createdAt ? discussion.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ discussion.updatedAt ? discussion.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ discussion.content }}</td>
            </tr>
            <tr>
                <th>HeartCount</th>
                <td>{{ discussion.heartCount }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ discussion.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('discussion_index') }}">back to list</a>

    <a href="{{ path('discussion_edit', {'id': discussion.id}) }}">edit</a>

    {{ include('discussion_admin/_delete_form.html.twig') }}
{% endblock %}
