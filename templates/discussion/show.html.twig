{% extends 'base.html.twig' %}

{% block title %}Read: {{ discussion.title }}{% endblock %}

{% block body %}
<div class="container show">
    <div class="row">
        <div class="col-sm-12">
             <img class="show-article-img" src="{{asset(discussion.image.webPath())}}">
            <div class="show-article-title-container d-inline-block pl-3 align-middle">
                <span class="show-article-title ">{{ discussion.title }}</span>
                <br>
                <span class="align-left article-details"><img class="article-author-img rounded-circle" src="{{ ('build/images/alien-profile.png') }}"> {{ discussion.user }} </span>
                <span class="pl-2 article-details">
                    {{ discussion.createdAt | date('d/m/Y') }}
                </span>
                {#<span class="pl-2 article-details">
                    <span class="js-like-article-count">{{ discussion.heartCount }}</span>
                    <a href="{{ path('article_toggle_heart', {id: discussion.id }) }}" class="fa fa-heart-o like-article js-like-article" title="Click to Like!"></a>
                </span>
                <span class="pl-2 article-details">
                    {% for tag in article.tags %}
                        <span class="badge badge-secondary">{{ tag.name }}</span>
                    {% endfor %}#}
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="article-text">
                {{ discussion.content| raw }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <p class="share-icons mb-5"><span class="pr-1">Share:</span> <i class="pr-1 fa fa-facebook-square"></i><i class="pr-1 fa fa-twitter-square"></i><i class="pr-1 fa fa-reddit-square"></i><i class="pr-1 fa fa-share-alt-square"></i></p>
        </div>
    </div>


        </div>
    </div>

{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    
{% endblock %}

{% block javascripts %}
   {{ parent() }}
{% endblock %}
