{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container show">
<a href="{{ path('user_new') }}" class="btn btn-primary pull-right">
        Create <span class="fa fa-plus-circle"></span>
    </a>
    <h1>Administration des utlisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Email</th>
                <th>Phone</th>
                <th>Roles</th>
                <th>FirstName</th>
                {#<th>Password</th>#}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                {#<td>{{ user.id }}</td>#}
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.firstName }}</td>
                {#<td>{{ user.password }}</td>#}
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                    <a href="{{ path('user_delete', {'id': user.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
	</div>
{% endblock %}
