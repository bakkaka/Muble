{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <a href="{{ path('admin_article_new') }}" class="btn btn-primary pull-right">
        Create <span class="fa fa-plus-circle"></span>
    </a>
    <h1>All Articles</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>

           <th>Created at</th>
            <th>Update at</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.author }}</td>
               
                <td>
                    {{ article.createdAt| date('d/m/Y')  }}
                </td>
				
                <td>
                    <a href="{{ path('admin_article_edit', {id: article.id
                    }) }}">Update
                        <span class="fa fa-pencil"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_article_delete', {id: article.id
                    }) }}">Delete
                        <span class="fa fa-trash-o"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}