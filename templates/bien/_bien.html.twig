<div class="card mb-5">
  {% if bien.picture %}
    <img src="{{ vich_uploader_asset(bien.picture, 'imageFile') | imagine_filter('thumb') }}"  width="100%" height="300" alt="">
    {% else %}
      <img src="{{ '/images/empty.jpg' | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height:auto;">
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">
      <a href="{{ path('bien_show', {'slug': bien.slug}) }}">
        {{ bien.title }}
      </a>
    </h5>
    <p class="card-text">{{ bien.surface }} m² - {{ bien.city }} ({{ bien.postalCode }})</p>
    <div class="text-primary" style="font-size:2rem; font-weight: bold;">
      {{ bien.formattedPrice }} €
    </div>
  </div>
</div>
