<!doctype html>
<html lang="en">

    <head>
        <title>{% block title %}Welcome to the SpaceBar{% endblock %}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% block stylesheets %}
           <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/font-awesome.css') }}">
			<link rel="stylesheet" href="{{ asset('css/styles.css') }}">
			<link rel="stylesheet" href="{{ asset('css/login.css') }}">
			<link rel="stylesheet" href="{{ asset('css/account.css') }}">
            
            <link rel="stylesheet" href="{{ asset('css/general.css') }}">
        {% endblock %}
		 <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>
	
        <nav class="navbar navbar-expand-lg navbar-dark navbar-bg mb-5">
            <a style="margin-left: 75px;" class="navbar-brand space-brand" href="{{ path('discussion_index') }}"> </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav mr-auto">
                     <li class="nav-item">
                       <a style="color: #fff;" class="nav-link" href="{{ path('property_index')}}">Immobilier</a>
                     </li>
                     <li class="nav-item">
                      <a style="color: #fff;" class="nav-link" href="{{ path('discussion_index')}}">Blog</a>
                     </li>
                   </ul>
                
                <ul class="navbar-nav ml-auto">
                    {% if is_granted('ROLE_USER') %}
					Bonjour {{app.user.firstName}}
                        <li class="nav-item dropdown" style="margin-right: 75px;">
                            <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              <img class="nav-profile-img rounded-circle" src="{{ app.user.avatarUrl(100) }}">
							  
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
							
                                <a class="dropdown-item" href="{{ path('app_account') }}">Your account</a>
                                {% if is_granted('ROLE_USER') %}
                                    <a class="dropdown-item" href="{{ path('discussion_new') }}">Créer un Post</a>
									<a class="dropdown-item" href="{{ path('bien_new') }}">Créer un Bien</a>
                                {% endif %}
                                <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a style="color: #fff;" class="nav-link" href="{{ path('app_login') }}">Login</a>
                        </li>
						
                    {% endif %}
                </ul>
            </div>
        </nav>
		
		
         {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

		{% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

		
		
        {% block body %}{% endblock %}
		<ul class="container show mention">
		<li><a href="#">Politique de confidentialité</a></li>
			<li><a href="#">A propopos de nous</a></li>
			<li><a href="#">Contactez-nous</a></li>
		</ul>

        <footer class="footer">
		
			
            <div class="container text-center">
			
                <span class="text-muted">Made with <i class="fa fa-heart" style="color: red;"></i> by a lovely team of <a href="https://example.com"> bi3online.com </a></span>
            </div>
        </footer>
		


        {% block javascripts %}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
		 <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
    </body>
</html>
